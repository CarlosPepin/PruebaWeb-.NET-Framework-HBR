@model Prueba_Web_HBR.Models.tblCategoria

@{
    ViewBag.Title = "CategoryEdit";
}

<h2>Editar Categoria</h2>


@using (Html.BeginForm("CategoryEdit", "Category", FormMethod.Post))
{
    @Html.HiddenFor(model => model.idCategoria)

    <div class="col-md-12">
        @Html.LabelFor(category => category.NombreCategoria)
        @Html.TextBoxFor(category => category.NombreCategoria, "", new { @class = "form-control" })
        @Html.LabelFor(category => category.DescripcionCategoria)
        @Html.TextBoxFor(category => category.DescripcionCategoria, "", new { @class = "form-control" })

        <div>
            <input value="Guardar cambios" class="btn btn-default" type="submit" />
        </div>
    </div>
}

<div class="btn btn-warning">
    @Html.ActionLink("Lista de categorias", "CategoryList")
</div>

